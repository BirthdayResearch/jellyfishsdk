{
  "private": true,
  "license": "MIT",
  "contributors": [
    {
      "name": "DeFiChain Foundation",
      "email": "engineering@defichain.com",
      "url": "https://defichain.com/"
    },
    {
      "name": "DeFiChain Jellyfish Developers"
    }
  ],
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "lerna run build",
    "version": "lerna version $1 --yes --no-push --no-git-tag-version",
    "publish:next": "lerna run publish:next",
    "publish:latest": "lerna run publish:latest",
    "standard": "ts-standard --fix",
    "test": "jest",
    "all": "npm run build && npm run standard && npm run test"
  },
  "devDependencies": {
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "ts-jest": "^26.5.2",
    "ts-standard": "^10.0.0",
    "typescript": "^4.2.2"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run standard"
    ]
  },
  "size-limit": [
    {
      "path": "packages/jellyfish/dist/jellyfish.umd.js",
      "limit": "5000 ms"
    }
  ]
}
