{
  "private": true,
  "license": "MIT",
  "contributors": [
    {
      "name": "DeFiChain Foundation",
      "email": "engineering@defichain.com",
      "url": "https://defichain.com/"
    },
    {
      "name": "DeFiChain Jellyfish Developers"
    }
  ],
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "version": "lerna version $1 --yes --no-push --no-git-tag-version",
    "publish:next": "lerna run publish:next",
    "publish:latest": "lerna run publish:latest",
    "lint:write": "prettier --write **/*.ts && eslint --fix **/*.ts",
    "lint:check": "prettier --check **/*.ts && eslint **/*.ts",
    "all": "npm run build && npm run format && npm run lint && jest"
  },
  "devDependencies": {
    "@size-limit/file": "^4.9.1",
    "@size-limit/time": "^4.9.1",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "codecov": "^3.8.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-jsdoc": "^32.2.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "size-limit": "^4.9.1",
    "ts-jest": "^26.5.2",
    "typescript": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:write"
    ]
  },
  "size-limit": [
    {
      "path": "packages/jellyfish/dist/jellyfish.umd.js",
      "limit": "5000 ms"
    }
  ]
}
