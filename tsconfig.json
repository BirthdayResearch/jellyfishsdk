    ],
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./packages",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@defichain/jellyfish": ["jellyfish"],
      "@defichain/jellyfish-address": ["jellyfish-address"],
