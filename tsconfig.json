      "@defichain/jellyfish-json": ["jellyfish-json"],
      "@defichain/jellyfish-network": ["jellyfish-network"],
      "@defichain/jellyfish-transaction": ["jellyfish-transaction"],
      "@defichain/jellyfish-transaction-builder": ["jellyfish-transaction-builder"],
      "@defichain/jellyfish-wallet": ["jellyfish-wallet"],
      "@defichain/jellyfish-wallet-mnemonic": ["jellyfish-wallet-mnemonic"],
      "@defichain/testcontainers": ["testcontainers"],
      "@defichain/testing": ["testing"],
