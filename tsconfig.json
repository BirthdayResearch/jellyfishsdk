{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@defichain-app-lib/actuator": [
        "apps/libs/actuator/src"
      ],
      "@defichain-app-lib/actuator/*": [
        "apps/libs/actuator/src/*"
      ],
      "@defichain/*": [
        "packages/*/src"
      ]
    },
    "target": "esnext",
    "experimentalDecorators": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true
  }
}
