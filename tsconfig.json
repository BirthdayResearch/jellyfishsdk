{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@defichain-apps/libs/*": [
        "apps/libs/*/src"
      ],
      "@defichain/*": [
        "packages/*/src"
      ]
    },
    "target": "es2020",
    "experimentalDecorators": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  }
}
