{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "helpers:pinGitHubActionDigests",
    ":semanticCommitTypeAll(bump)"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": false,
  "major": {
    "dependencyDashboardApproval": true
  },
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "enabled": false
    },
    {
      "matchPackagePatterns": ["lerna"],
      "enabled": false
    },
    {
      "matchPackagePatterns": ["^defichain$", "^@defichain/"],
      "enabled": false
    },
    {
      "matchPackagePatterns": ["level", "^level"],
      "enabled": false
    },
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": ["jest"],
      "groupName": "jest"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["defi/defichain"],
      "versioning": "regex:^v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?-\\w*$"
    }
  ],
  "docker-compose": {
    "versioning": "docker"
  },
  "regexManagers": [
    {
      "fileMatch": ["^DeFiDContainer.ts$"],
      "matchStrings": ["image: defi\/defichain:(?<currentValue>.*?)\\n"],
      "depNameTemplate": "defi/defichain",
      "datasourceTemplate": "docker"
    }
  ]
}
