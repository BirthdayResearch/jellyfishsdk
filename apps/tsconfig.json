{
  "extends": "../tsconfig.base.json",
  "include": [
    "./legacy-api/src",
    "./ocean-api/src",
    "./rich-list-api/src",
    "./libs/*/src"
  ],
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@defichain-app-lib/actuator": [
        "libs/actuator/src"
      ],
      "@defichain-app-lib/actuator/*": [
        "libs/actuator/src/*"
      ],
      "@defichain/*": [
        "../packages/*/src"
      ]
    }
  }
}
