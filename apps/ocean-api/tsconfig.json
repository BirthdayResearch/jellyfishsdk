{
  "extends": "../../tsconfig.json",
  "include": [
    "./src/**/*",
    "package.json"
  ],
  "compilerOptions": {
    "lib": [
      "es2020",
      "dom"
    ],
    "outDir": "./dist",
    "rootDir": "../../",
    "removeComments": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  }
}
