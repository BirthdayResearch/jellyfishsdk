{
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "compilerOptions": {
    "tsConfigPath": "tsconfig.json"
  },
  "projects": {
    "centralised-indexer": {
      "type": "application",
      "root": "centralised-indexer",
      "entryFile": "apps/centralised-indexer/src/indexer/index",
      "sourceRoot": "centralised-indexer/src/indexer"
    },
    "legacy-api": {
      "type": "application",
      "root": "legacy-api",
      "entryFile": "apps/legacy-api/src/index",
      "sourceRoot": "legacy-api/src"
    },
    "ocean-api": {
      "type": "application",
      "root": "ocean-api",
      "entryFile": "apps/ocean-api/src/index",
      "sourceRoot": "ocean-api/src"
    },
    "playground-api": {
      "type": "application",
      "root": "playground-api",
      "entryFile": "apps/playground-api/src/index",
      "sourceRoot": "playground-api/src"
    },
    "rich-list-api": {
      "type": "application",
      "root": "rich-list-api",
      "entryFile": "apps/rich-list-api/src/index",
      "sourceRoot": "rich-list-api/src"
    },
    "actuator": {
      "type": "library",
      "root": "libs/actuator",
      "entryFile": "index",
      "sourceRoot": "libs/actuator/src",
      "compilerOptions": {
        "tsConfigPath": "libs/actuator/tsconfig.lib.json"
      }
    },
    "blockchaincpp": {
      "type": "library",
      "root": "libs/blockchaincpp",
      "entryFile": "index",
      "sourceRoot": "libs/blockchaincpp/src",
      "compilerOptions": {
        "tsConfigPath": "libs/blockchaincpp/tsconfig.lib.json"
      }
    },
    "filters": {
      "type": "library",
      "root": "libs/filters",
      "entryFile": "index",
      "sourceRoot": "libs/filters/src",
      "compilerOptions": {
        "tsConfigPath": "libs/filters/tsconfig.lib.json"
      }
    }
  }
}
